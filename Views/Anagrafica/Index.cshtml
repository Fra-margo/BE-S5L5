@model List<Anagrafica>
<style>
    h2 {
        color: darkblue;
    }

    th {
        color: darkblue;
    }
</style>
<div class="container">
    <h2>Anagrafiche</h2>
    <table class="table">
        <thead>
            <tr>
                <th>ID Anagrafica</th>
                <th>Cognome</th>
                <th>Nome</th>
                <th>Indirizzo</th>
                <th>Città</th>
                <th>CAP</th>
                <th>Codice Fiscale</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.IDanagrafica</td>
                    <td>@item.Cognome</td>
                    <td>@item.Nome</td>
                    <td>@item.Indirizzo</td>
                    <td>@item.Città</td>
                    <td>@item.CAP</td>
                    <td>@item.CodiceFiscale</td>
                </tr>
            }
        </tbody>
    </table>
</div>